<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="100dip" />
            <gradient android:startColor="@color/gray" android:centerColor="@color/gray"
                android:centerY="0.75" android:endColor="@color/gray" android:angle="90" />
            <stroke android:width="0dp" android:color="@color/orange" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="100dip" />
                <gradient android:startColor="@color/dark_gray" android:endColor="@color/dark_gray"
                    android:angle="90" />
                <stroke android:width="0dp" android:color="@color/dark_gray" />
            </shape>
        </clip>
    </item>
</layer-list>